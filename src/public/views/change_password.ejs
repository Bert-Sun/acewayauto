<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/header.ejs', { stylesheets: ['login', "form_elements" ], scripts: [{name: 'login' , defer:
        false}], page_name: "Change Password" }) %>

<body>
    <%- include('partials/navbar.ejs', {"logged_in": logged_in})%>
        <main>
            <div class="form_background">
                <h1>Change Password</h1>
                <% if(typeof errors!='undefined' ) { %>
                    <% errors.forEach(function(error){ %>
                        <p class='error_message'>
                            <%= error.msg %>
                        </p>
                    <% }) %>
                <% } %>

                <% if (typeof temp_pass != 'undefined' && temp_pass != 'none'){ %>
                    <p class='error_message'>
                        You have a temporary password. Please change it now.
                    </p>
                <% } %>

                <form onsubmit="form_submit()" action="/change_password" id="regform" method="POST">
                    <div class="input">
                        <input name="user" value="<%=user%>" type=hidden>
                    </div>
                    <% if (typeof temp_pass != 'undefined' && temp_pass == 'none'){ %>
                        <div class='input'>
                            <input type="password" name="prevpass" placeholder=" ">
                            <label for="prevpass"><span>Previous Password</span></label>
                        </div>
                    <% } else {%>
                        <div class='input'>
                            <input type="hidden" name="prevpass" value="<%=temp_pass%>">
                        </div>
                    <% } %>
                    <div class="input">
                        <input type="password" name="pass" placeholder=" ">
                        <label for="pass"><span>Password</span></label>
                    </div>
                    <div class="input">
                        <input type="password" name="passconfirm" placeholder=" ">
                        <label for="passconfirm"><span>Confirm Password</span></label>
                    </div>
                    <button type="submit"> Change Password </button>
                </form>
            </div>
        </main>
